        </div>
        <div class="span-div-high">
            <span class="highlight-title">{{ section.settings.highlight-title-1 }}</span>
            <span class="highlight-subtitle">{{ section.settings.highlight-subtitle-1 }}</span>
        </div>
    </div>
    <div class="step-high">
        <div>
            <img src="{{ section.settings.highlight-img-2 | img_url }}" width="25" height="25" alt="">
        </div>
        <div class="span-div-high">
            <span class="highlight-title">{{ section.settings.highlight-title-1 }}</span>
            <span class="highlight-subtitle">{{ section.settings.highlight-subtitle-1 }}</span>
