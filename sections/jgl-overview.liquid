  {
    "name": "JGL PDP Overview",
    "settings": [
    ],
    "blocks": [
      {
        "type": "blokz",
        "name": "Blokz",
        "settings": [
          {
            "type": "html",
            "id": "htmlId",
            "label": "HTML"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "JGL PDP Overview"
      }
    ]
  }
{% endschema %}