<div class="product-section--container more-from-vendor">
  <div>
    <h2>{{product.vendor}}</h2>
  </div>

  <div class="">
    {% for collection in collections %}
      {% if collection.title == product.vendor %}
        <a href="{{collection.url}}">See more from ZLINE</a>
      {% endif %}
    {% endfor %}
  </div>

</div>

<style>
  .more-from-vendor {
    text-align: center;
  }

  .more-from-vendor a {
    font-size: 1.125rem;
    text-decoration: underline;
    color: #000;
  }

  .more-from-vendor h2 {
    font-size: 2.5rem;
  }
</style>
{% schema %}
  {
    "name": "More form vendor",
    "settings": [],
    "presets": [
      {
        "name": "More form vendor"
      }
    ]
  }
{% endschema %}