<div class="brand-section">
    <div>
        <h1>{{ section.settings.brands-title }}</h1>
        <span>{{ section.settings.brands-sub }}</span>
    </div>
</div>


<style>
    .brand-section{
        background-image: url('https://cdn.shopify.com/s/files/1/0694/3499/9087/files/1_759f0bfe-101c-4728-90c8-1a128082d08e.webp?v=1672799270');
    }
</style>

{% schema %}
    {
        "name": "JGL Brand Section",
        "settings": [
            {
                "type":"text",
                "id":"brands-title",
                "label":"Brand Section Title",
                "default": "WE ARE AN AUTHORIZED DEALER OF TODAY'S BEST BRANDS"
            },
            {
                "type":"text",
                "id":"brands-sub",
                "label":"Brand Section Sub-Title",
                "default": "As an authorized dealer, our team can help you find the perfect home appliance & goods, for the best price, from the top brands."
            }

        ],
        "presets": [
    {
      "name": "JGL Brand Section"
    }]
}
{% endschema %}