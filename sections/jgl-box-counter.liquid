<div class="jgl-counter">
    <div class="step-box" id="counter"></div>
    <div class="step-box">123</div>
    <div class="step-box">4356</div>
    <div class="step-box">567</div>
    <div class="step-box">78978 </div>
</div>

<style>

</style>

<script>
  window.addEventListener("scroll", function(){
    if (isInViewport(document.getElementById("counter")) ) {
      let i = 0;
      let counter = setInterval(function(){
        document.getElementById("counter").innerHTML = i;
        i++;
        if (i > 597432) {
          clearInterval(counter);
        }
      }, 1);
    }
  });

  function isInViewport(element) {
    var rect = element.getBoundingClientRect();
    var html = document.documentElement;
    return (
      rect.top >= 0 &&
      rect.left >= 0 &&
      rect.bottom <= (window.innerHeight || html.clientHeight) &&
      rect.right <= (window.innerWidth || html.clientWidth)
    );
  }
</script>

