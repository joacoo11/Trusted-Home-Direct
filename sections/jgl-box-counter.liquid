      </div>
  </div>
</div>

<style>
    .jgl-5-way{
        display: grid;
        grid-template-columns: 20% 20% 20% 20% 20%;
        justify-content: center;
        align-items: center;
        height: 200px;
    }

    .jgl-mobile-highlight{
        display: none;
    }

    .step-5{
        display: flex;
        justify-self: center;
        cursor: pointer;
    }

    .strip-5-title{
        color: #000;
        font-weight: 400;
        line-height: 1.5;
        font-size: 1.75rem;
        max-width: 150px;
        margin-top: 0.5rem;
        text-align: center;
    }

    .span-div-5{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-left: 10px;
        gap: 5px;
    }

    .small-5{
      font-size: 13px;
      line-height: 20px;
      text-align: center;
    }

    @media (max-width:900px){
        .jgl-5-way{
            display: grid;
            grid-template-columns: 50% 50%;
            justify-content: center;
            align-items: center;
            background-color: #000;
            height: 300px;
        }

        .strip-5-title{
            line-height: 20px;
            font-size: 15px;
        }
    
    }
</style>

<script>
  var counterElements = document.getElementsByClassName("counter");
  window.addEventListener("scroll", function(){
    for (let i = 0; i < counterElements.length; i++) {
      if (isInViewport(document.getElementById("counter")) ) {
        let startingNumber = parseFloat(counterElements[i].innerHTML);
        let o = 0;
        let counter = setInterval(function(){
          counterElements[i].innerHTML = o;
          o++;
          if (o > startingNumber) {
            clearInterval(counter);
          }
        }, 0.000001);
      }
    }
  });

  function isInViewport(element) {
    var rect = element.getBoundingClientRect();
    var html = document.documentElement;
    return (
      rect.top >= 0 &&
      rect.left >= 0 &&
      rect.bottom <= (window.innerHeight || html.clientHeight) &&
      rect.right <= (window.innerWidth || html.clientWidth)
    );
  }
</script>

