            -webkit-font-smoothing: antialiased;
            text-align: center;
        }

        .about-subtitle{
            font-weight: 400;
            font-size: 18px;
            line-height: 1.5;
            padding-left: 25px;
            padding-right: 25px;
        }

        .p-div > p{
            width: 90%;
        }


        .about-displays{
            display: flex;
            background-color: #f6f4f3;
            width: 95%;
            margin-left: 0px;

        }
        .about-displays-2{
            display: flex;
            background-color: #f6f4f3;
            width: 95%;
            margin-right: 0px;


        }
    }
    @media (max-width:590px) {
        .about-displays .inner-about{
            flex-direction: column-reverse;
        }

        .inner-about{
            flex-direction: column;
        }

        .about-displays{
            width: 100%;
            margin-left: 0px;
        }
        .about-displays-2{
            width: 100%;
            margin-right: 0px;
        }

        .inner-about > img{
            max-width: 100%;
            width: 100%;
            padding-left: 0px;
            padding-right: 0px;
            height: auto;
        }
        .box-p-div > p{
            max-width: none;
        }
    }
    }
