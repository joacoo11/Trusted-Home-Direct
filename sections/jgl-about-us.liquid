        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    .inner-about > img{
        max-width: 40%;
        height: auto;
        object-fit: contain;
    }

    .box-p-div{
        padding:50px;
    }

    .box-p-div > h1{
        font-weight: 700;
        font-size: 22px;
        line-height: 1.5;
        display: block;
        letter-spacing: 4.5px;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
    }

    .box-p-div > p{
        max-width: 90%;
    }

    @media (max-width:1071px) {
        .about-mobile{
            display: block;
        }

        .img-top{
            max-width: 100%;
            height: auto;
        }

        .about-section{
            display: none;
        }

        .title-div-ab-mob{
